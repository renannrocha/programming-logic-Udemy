Algoritmo "circulo"

Var
   area , raio :  real
Inicio
   escreval("-calculo da area de um circulo-")
   escreval
   escreva("Digite o valor do raio do circulo: ")
   leia(raio)
   escreval
   escreval("-------------------------------")
   escreval
   
   area <- Pi*(raio^2)
   
   escreval("AREA = ", area)
   

Fimalgoritmo