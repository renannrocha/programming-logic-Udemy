Algoritmo "crescente"
//
//
// Descrição   :
// Autor(a)    : Marcio Renan
// Data atual  : 27/03/2023
Var
   x, y :inteiro
Inicio
   escreval("Digite dois numeros: ")
   leia(x)
   leia(y)

   enquanto x <> y faca

      se (x > y) entao
         escreval("DECRESCENTE! ")
      senao
         escreval("CRESCENTE! ")
      fimse

      escreval()
      escreval("Digite outros dois numeros: ")
      leia(x)
      leia(y)

   fimenquanto



Fimalgoritmo